@model OtobusBilet.Models.Admin
<h1>Admin Girişi:</h1>

<form asp-controller="Admin" asp-action="AdminGiris2" method="post">

    <div class="form-group">
        <label for="KullaniciAdi">Kullanıcı Adı:</label>
        <input type="text" id="UserName" name="KullaniciAdi" required asp-validation-for="KullaniciAdi" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Sifre">Şifre:</label>
        <input type="password" id="Password" name="Sifre" required asp-validation-for="Sifre" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Giriş Yap" class="btn btn-primary" />
    </div>
</form>